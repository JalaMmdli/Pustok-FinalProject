@model SliderUpdateDto

<form enctype="multipart/form-data" method="post">
        <img src ="~/assets/image/sliderIcons/@Model.ImagePath "style="width:150px; margin-top:30px" />
    <div class="form-group">
        <label asp-for="File"></label>
        <input class="form-control" asp-for="File" placeholder="Enter icon">
        <input type="hidden"  asp-for="ImagePath"/>
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Button">Button</label>
        <input class="form-control" asp-for="Button" placeholder="Enter Button Fields">
        <span asp-validation-for="Button" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>



